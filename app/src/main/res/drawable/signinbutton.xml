<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#BB4E4E" />
            <gradient android:angle="-90" android:startColor="#B80C0C" android:endColor="#C7333F"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#BB4141" />
            <solid android:color="#E71C25"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#C9272B" />
            <gradient android:angle="-90" android:startColor="#EC191F" android:endColor="#C72B3A" />
        </shape>
    </item>
</selector>