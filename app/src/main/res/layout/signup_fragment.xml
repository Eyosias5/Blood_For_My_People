<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:id="@+id/layout">
    <data>
        <variable name="viewModel" type="com.teambloodformypeople.viewmodels.UserViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >
        <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:id="@+id/guideline5"
                                                    android:orientation="vertical"
                                                    app:layout_constraintGuide_begin="16dp"/>
        <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:id="@+id/guideline6"
                                                    android:orientation="vertical"
                                                    app:layout_constraintGuide_end="16dp"/>

        <ImageView
                android:layout_width="124dp"
                android:layout_height="97dp" app:srcCompat="@drawable/ic_blood_drop_svgrepo_com"
                android:id="@+id/imageView4"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="40dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toStartOf="@+id/guideline6" android:layout_marginEnd="8dp"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
                android:text="Blood For My People"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView18"
                android:fontFamily="sans-serif-condensed-medium"
                android:textColor="@color/colorPrimaryDark" android:textSize="20sp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView4"/>
        <TextView
                android:text="Sign up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView19" app:layout_constraintEnd_toStartOf="@+id/guideline6"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:textSize="20sp"
                android:fontFamily="sans-serif-condensed-medium"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView18"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
                android:text="Full Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView20"
                android:textSize="16sp"
                android:fontFamily="sans-serif-condensed-light"
                app:layout_constraintBaseline_toBaselineOf="@+id/editText2" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="@+id/guideline5" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/guideline3" app:layout_constraintHorizontal_bias="0.0"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:text="@={viewModel.fullName}"
                android:id="@+id/editText2"
                android:textStyle="bold" android:layout_marginEnd="22dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="215dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/editText3"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="@+id/guideline3"/>
        <TextView
                android:text="Date of Birth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView21"
                android:textSize="16sp"
                android:fontFamily="sans-serif-condensed-light"
                app:layout_constraintBaseline_toBaselineOf="@+id/editText3" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="@+id/guideline5" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/guideline3"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:inputType="date|textPersonName"
                android:ems="10"
                android:text="@={viewModel.dateOfBirth}"
                android:id="@+id/editText3"
                android:textSize="18sp"
                android:textStyle="bold" android:layout_marginEnd="22dp"
                app:layout_constraintTop_toBottomOf="@+id/editText2" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/editText5"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="@+id/guideline3"/>
        <TextView
                android:text="Email "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView22" android:textSize="16sp"
                android:fontFamily="sans-serif-condensed-light"
                app:layout_constraintBaseline_toBaselineOf="@+id/editText5"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
        />
        <EditText
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:inputType="textWebEmailAddress|textPersonName"
                android:ems="10"
                android:text="@={viewModel.email}"
                android:id="@+id/editText5"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/editText3"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="9dp" app:layout_constraintBottom_toTopOf="@+id/editText6"
                android:layout_marginEnd="22dp" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="@+id/guideline3"/>
        <TextView
                android:text="Phone Number"
                android:layout_width="87dp"
                android:layout_height="27dp"
                android:id="@+id/textView23"

                android:textSize="16sp"
                android:fontFamily="sans-serif-condensed-light"
                app:layout_constraintBaseline_toBaselineOf="@+id/editText6"
                app:layout_constraintStart_toStartOf="@+id/guideline5" android:layout_marginStart="8dp"
        />
        <EditText
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editText6"
                android:text="@={viewModel.phoneNumber}"
                android:textStyle="bold" android:phoneNumber="true"
                app:layout_constraintTop_toBottomOf="@+id/editText5"
                app:layout_constraintStart_toEndOf="@+id/textView23" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/editText7"
                android:layout_marginEnd="22dp" app:layout_constraintHorizontal_bias="0.0"/>
        <TextView
                android:text="Password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView24"
                android:textSize="16sp"
                android:fontFamily="sans-serif-condensed-light"
                app:layout_constraintBaseline_toBaselineOf="@+id/editText7" android:layout_marginStart="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/editText7" android:layout_marginEnd="34dp"
        />
        <EditText
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:text="@{viewModel.password}"
                android:id="@+id/editText7"
                android:textStyle="bold" android:password="true"
                app:layout_constraintTop_toBottomOf="@+id/editText6"
                app:layout_constraintStart_toEndOf="@+id/textView24" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="201dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="22dp"/>
        <Button
                android:text="Sign up"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/Signup_button"
                android:onClick="@{(view)->viewModel.onSignUpBtn(view)}"
                android:background="@drawable/signinbutton" app:layout_constraintEnd_toStartOf="@+id/guideline6"
                android:layout_marginEnd="32dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="32dp" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/editText7" android:textColor="#F9F9F9"
                android:fontFamily="sans-serif-condensed-medium" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
                android:text="Already a member? Login Here"
                android:layout_width="wrap_content"
                android:onClick="@{(view)->viewModel.alreadyMember(view)}"
                android:layout_height="wrap_content"
                android:id="@+id/alreadyMemberTextView" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/Signup_button" android:fontFamily="sans-serif-condensed-light"
                android:textColor="#1C38A8" android:textStyle="bold" app:layout_constraintHorizontal_bias="0.5"/>

        <ProgressBar
                android:visibility="invisible"
                style="?android:attr/progressBarStyle"
                android:layout_width="96dp"
                android:layout_height="99dp"
                android:id="@+id/progressBar"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
        <androidx.constraintlayout.widget.Barrier android:layout_width="wrap_content"
                                                  android:layout_height="wrap_content" android:id="@+id/barrier"
                                                  app:barrierDirection="top" tools:layout_editor_absoluteY="731dp"/>
        <androidx.constraintlayout.widget.Guideline
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:layout_constraintGuide_begin="109dp"
                android:id="@+id/guideline3"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>