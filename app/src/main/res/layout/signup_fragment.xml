<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:id="@+id/constraintLayout">
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline5"
                                                android:orientation="vertical"
                                                app:layout_constraintGuide_begin="16dp"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline6"
                                                android:orientation="vertical" app:layout_constraintGuide_end="16dp"/>
    <ImageView
            android:layout_width="124dp"
            android:layout_height="97dp" app:srcCompat="@drawable/ic_blood_drop_svgrepo_com"
            android:id="@+id/imageView4"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="@+id/guideline5" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline6" android:layout_marginEnd="8dp"
            android:layout_marginBottom="146dp" app:layout_constraintBottom_toTopOf="@+id/editText2"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintHorizontal_bias="0.504"/>
    <TextView
            android:text="Blood For My People"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView18"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="@color/colorPrimaryDark" android:textSize="20sp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline5"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/imageView4"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Sign up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView19" app:layout_constraintEnd_toStartOf="@+id/guideline6"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="@+id/guideline5"
            android:layout_marginStart="8dp"
            android:textSize="20sp"
            android:fontFamily="sans-serif-condensed-medium"
            android:layout_marginBottom="520dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="Full Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView20"
            app:layout_constraintEnd_toStartOf="@+id/editText2" app:layout_constraintStart_toStartOf="@+id/guideline5"
            android:layout_marginStart="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/editText2" android:textSize="16sp"
            android:fontFamily="sans-serif-condensed-light"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText2"
            app:layout_constraintStart_toEndOf="@+id/textView20"
            android:layout_marginStart="32dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline6"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView19"
            android:layout_marginBottom="391dp" app:layout_constraintBottom_toBottomOf="parent"
            android:textStyle="bold" app:layout_constraintVertical_bias="0.21"/>
    <TextView
            android:text="Date of Birth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView21"
            app:layout_constraintStart_toStartOf="@+id/textView20"
            android:textSize="16sp" app:layout_constraintBaseline_toBaselineOf="@+id/editText3"
            app:layout_constraintEnd_toEndOf="@+id/textView20" android:layout_marginStart="8dp"
            android:fontFamily="sans-serif-condensed-light"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="date|textPersonName"
            android:ems="10"
            android:id="@+id/editText3"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/editText2" app:layout_constraintBottom_toTopOf="@+id/editText5"
            app:layout_constraintTop_toBottomOf="@+id/editText2" app:layout_constraintEnd_toEndOf="@+id/editText2"
            android:layout_marginTop="16dp" android:textStyle="bold"/>
    <TextView
            android:text="Email "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView22" android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/textView21"
            app:layout_constraintEnd_toEndOf="@+id/textView21"
            app:layout_constraintBaseline_toBaselineOf="@+id/editText5"
            android:fontFamily="sans-serif-condensed-light"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textWebEmailAddress|textPersonName"
            android:ems="10"
            android:id="@+id/editText5"
            app:layout_constraintStart_toStartOf="@+id/editText3"
            app:layout_constraintTop_toBottomOf="@+id/editText3" app:layout_constraintEnd_toEndOf="@+id/editText3"
            android:layout_marginTop="16dp" android:textStyle="bold"/>
    <TextView
            android:text="Phone Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView23" app:layout_constraintStart_toStartOf="@+id/textView22"
            app:layout_constraintEnd_toEndOf="@+id/textView22" android:textSize="16sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/editText6"
            android:fontFamily="sans-serif-condensed-light"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText6"
            app:layout_constraintStart_toStartOf="@+id/editText5" app:layout_constraintEnd_toEndOf="@+id/editText5"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/editText5"
            android:textStyle="bold" android:phoneNumber="true"/>
    <TextView
            android:text="Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView24" app:layout_constraintStart_toStartOf="@+id/textView23"
            app:layout_constraintEnd_toEndOf="@+id/textView23" android:textSize="16sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/editText7"
            android:fontFamily="sans-serif-condensed-light"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText7" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/editText6"
            app:layout_constraintStart_toStartOf="@+id/editText6" app:layout_constraintEnd_toEndOf="@+id/editText6"
            android:textStyle="bold" android:password="true"/>
    <Button
            android:text="Sign up"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/Signup_button"
            android:background="@drawable/signinbutton" app:layout_constraintEnd_toStartOf="@+id/guideline6"
            android:layout_marginEnd="32dp" app:layout_constraintStart_toStartOf="@+id/guideline5"
            android:layout_marginStart="32dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/editText7" android:textColor="#F9F9F9"
            android:fontFamily="sans-serif-condensed-medium"/>
    <TextView
            android:text="Already a member? Login Here"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/alreadyMemberTextView" app:layout_constraintStart_toStartOf="@+id/Signup_button"
            app:layout_constraintEnd_toEndOf="@+id/Signup_button" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/Signup_button" android:fontFamily="sans-serif-condensed-light"
            android:textColor="#1C38A8" android:textStyle="bold"/>

</androidx.constraintlayout.widget.ConstraintLayout>