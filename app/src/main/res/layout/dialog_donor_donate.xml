<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
>
    <data>
        <variable name="fragment" type="com.teambloodformypeople.fragments.AddDonationHistoryFragment"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:text="Date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:id="@+id/textView_time"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.498"
                android:gravity="center_horizontal"/>
        <TextView
                android:text="July 6 2019"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/date" android:textSize="26sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/divider" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView_time" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:gravity="center_horizontal"/>
        <View
                android:id="@+id/divider"
                android:layout_width="395dp"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.275" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>
        <TextView
                android:text="Donater"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:id="@+id/textView3"
                app:layout_constraintEnd_toStartOf="@+id/guideline12"
                android:layout_marginEnd="52dp" app:layout_constraintBaseline_toBaselineOf="@+id/donorName"/>
        <TextView
                android:text="To"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:id="@+id/textView4"
                app:layout_constraintStart_toStartOf="@+id/textView3"
                app:layout_constraintBaseline_toBaselineOf="@+id/recepientName"/>
        <TextView
                android:text="Eyosias Samson"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:id="@+id/donorName"
                android:textStyle="bold" android:layout_marginStart="36dp"
                app:layout_constraintStart_toStartOf="@+id/guideline12" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.053"
                android:layout_marginTop="45dp" app:layout_constraintTop_toBottomOf="@+id/divider"/>
        <TextView
                android:text="Brass Hospital"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:id="@+id/recepientName"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/donorName" android:layout_marginBottom="13dp"
                app:layout_constraintBottom_toTopOf="@+id/editText"/>
        <TextView
                android:text="Amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/textView4"
                app:layout_constraintBaseline_toBaselineOf="@+id/editText"/>

        <Button
                android:text="Add Donation History"
                android:layout_width="180dp"
                android:layout_height="41dp"
                android:onClick="@{(view)->fragment.insertDonationHistory(view)}"
                android:id="@+id/AddDonationHistoryBtn" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintHorizontal_bias="0.434" android:layout_marginTop="56dp"
                app:layout_constraintTop_toBottomOf="@+id/editText"
                android:background="@android:color/holo_blue_light" android:textColor="@color/colorWhite"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/editText"
                android:inputType="numberDecimal"
                android:hint="Enter in decimals"
                app:layout_constraintStart_toStartOf="@+id/recepientName" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="58dp"
                app:layout_constraintTop_toBottomOf="@+id/donorName"/>
        <androidx.constraintlayout.widget.Guideline
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:layout_constraintGuide_begin="157dp"
                android:id="@+id/guideline12"/>
        <!--android:text="@={fragment.amount}"-->
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>