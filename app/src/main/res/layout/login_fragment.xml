<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:id="@+id/layout2">
    <data>
        <variable name="viewModel" type="com.teambloodformypeople.viewmodels.UserViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:id="@+id/guideline" app:layout_constraintGuide_begin="7dp"
                                                    android:orientation="vertical"/>
        <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:id="@+id/guideline4"
                                                    android:orientation="vertical"
                                                    app:layout_constraintGuide_end="16dp"/>
        <TextView
                android:text="Sign in"
                android:layout_width="373dp"
                android:layout_height="wrap_content"
                android:id="@+id/login_textView"
                android:textSize="20sp"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center_horizontal"
                app:layout_constraintStart_toStartOf="@+id/textView18"
                app:layout_constraintEnd_toEndOf="@+id/textView18" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/db_tv"/>
        <TextView
                android:text="Email "
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/email_textVIew"
                android:textSize="16sp"
                android:fontFamily="sans-serif-condensed-light"
                app:layout_constraintBaseline_toBaselineOf="@+id/db_tv" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="@+id/guideline" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/guideline8"/>
        <com.google.android.material.textfield.TextInputEditText
                android:text="@={viewModel.email}"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:inputType="textWebEmailAddress|textPersonName"
                android:ems="10"
                android:id="@+id/db_tv"
                android:textSize="18sp"
                android:fontFamily="sans-serif-condensed-medium"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"
                app:layout_constraintBottom_toTopOf="@+id/pass_tv" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="@+id/guideline8" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/guideline4"/>
        <TextView
                android:text="Password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView17"
                app:layout_constraintStart_toStartOf="@+id/guideline"
                android:layout_marginStart="8dp" app:layout_constraintBaseline_toBaselineOf="@+id/pass_tv"
                android:textSize="16sp" android:fontFamily="sans-serif-condensed-light"
                app:layout_constraintEnd_toStartOf="@+id/guideline8"/>
        <com.google.android.material.textfield.TextInputEditText
                android:text="@={viewModel.password}"
                android:layout_width="0dp"
                android:layout_height="43dp"
                android:inputType="textPersonName|textPassword"
                android:ems="10"
                android:id="@+id/pass_tv"
                android:fontFamily="sans-serif-condensed-medium"
                android:textStyle="bold" android:password="true"
                android:layout_marginBottom="18dp"
                app:layout_constraintBottom_toTopOf="@+id/login_button" android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="@+id/guideline8"
                app:layout_constraintEnd_toStartOf="@+id/guideline4"/>
        <Button
                android:text="Sign in"
                android:onClick="@{(view)->viewModel.onLogin(view)}"
                android:layout_width="325dp"
                android:layout_height="wrap_content"
                android:id="@+id/login_button"
                android:background="@drawable/signinbutton"
                android:textColor="@android:color/white" android:fontFamily="sans-serif-condensed-medium"
                app:layout_constraintStart_toStartOf="@+id/login_textView"
                app:layout_constraintEnd_toEndOf="@+id/login_textView" android:layout_marginBottom="12dp"
                app:layout_constraintBottom_toTopOf="@+id/signUpLink"/>
        <TextView
                android:text="Blood For My People"
                android:layout_width="373dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView18"
                android:fontFamily="sans-serif-condensed-medium"
                android:textColor="@color/colorPrimaryDark" android:textSize="20sp"
                android:gravity="center_horizontal"
                app:layout_constraintStart_toStartOf="@+id/imageView4"
                app:layout_constraintEnd_toEndOf="@+id/imageView4"
                app:layout_constraintBottom_toTopOf="@+id/login_textView"/>
        <ImageView
                android:layout_width="139dp"
                android:layout_height="119dp" app:srcCompat="@drawable/ic_blood_drop_svgrepo_com"
                android:id="@+id/imageView4"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/textView18" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/guideline11" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>
        <TextView
                android:text="Not  a Memeber? Sign up here"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/signUpLink"
                android:onClick="@{(view)->viewModel.onSignUp(view)}"
                android:fontFamily="sans-serif-condensed-light"
                android:textColor="#1C38A8" android:singleLine="false" android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/login_button"
                app:layout_constraintEnd_toEndOf="@+id/login_button" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/guideline10"/>
        <androidx.constraintlayout.widget.Guideline
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:layout_constraintGuide_begin="98dp"
                android:id="@+id/guideline8"/>
        <androidx.constraintlayout.widget.Guideline
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:layout_constraintGuide_begin="474dp"
                android:id="@+id/guideline10"/>
        <androidx.constraintlayout.widget.Guideline
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:layout_constraintGuide_begin="25dp"
                android:id="@+id/guideline11"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>