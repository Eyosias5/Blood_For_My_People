<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="viewModel" type="com.teambloodformypeople.viewmodels.UserViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:id="@+id/guideline" app:layout_constraintGuide_begin="16dp"
                                                    android:orientation="vertical"/>
        <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:id="@+id/guideline4"
                                                    android:orientation="vertical"
                                                    app:layout_constraintGuide_end="16dp"/>
        <TextView
                android:text="Sign in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/login_textView"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="475dp"
                app:layout_constraintEnd_toStartOf="@+id/guideline4"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="@+id/guideline"
                android:layout_marginStart="8dp" android:textSize="20sp"
                android:fontFamily="sans-serif-condensed-medium"
        />
        <TextView
                android:text="Email "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/email_textVIew"
                app:layout_constraintStart_toStartOf="@+id/guideline"
                android:layout_marginStart="16dp" android:layout_marginTop="51dp"
                app:layout_constraintTop_toBottomOf="@+id/login_textView" android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@+id/db_tv" android:layout_marginEnd="24dp"
                android:fontFamily="sans-serif-condensed-light"/>
        <com.google.android.material.textfield.TextInputEditText
                android:text="@={viewModel.email}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textWebEmailAddress|textPersonName"
                android:ems="10"
                android:id="@+id/db_tv"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/email_textVIew"
                app:layout_constraintEnd_toStartOf="@+id/guideline4" android:layout_marginEnd="8dp"
                android:fontFamily="sans-serif-condensed-medium"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="391dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/login_textView" app:layout_constraintVertical_bias="1.0"
                android:layout_marginStart="16dp" android:textStyle="bold"/>
        <TextView
                android:text="Password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView17"
                app:layout_constraintStart_toStartOf="@+id/guideline"
                android:layout_marginStart="16dp" app:layout_constraintBaseline_toBaselineOf="@+id/pass_tv"
                app:layout_constraintEnd_toStartOf="@+id/pass_tv" android:layout_marginEnd="16dp"
                android:textSize="16sp" android:fontFamily="sans-serif-condensed-light"/>
        <com.google.android.material.textfield.TextInputEditText
                android:text="@={viewModel.password}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName|textPassword"
                android:ems="10"
                android:id="@+id/pass_tv"
                app:layout_constraintStart_toEndOf="@+id/textView17"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@+id/db_tv" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/guideline4" android:fontFamily="sans-serif-condensed-medium"
                android:textStyle="bold" android:password="true"/>
        <Button
                android:text="Sign in"
                android:onClick="@{(view)->viewModel.onLogin(view)}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/login_button" app:layout_constraintStart_toStartOf="@+id/guideline"
                android:layout_marginStart="32dp" app:layout_constraintEnd_toStartOf="@+id/guideline4"
                android:layout_marginEnd="32dp" android:layout_marginTop="56dp"
                app:layout_constraintTop_toBottomOf="@+id/pass_tv" android:background="@drawable/signinbutton"
                android:textColor="@android:color/white" android:fontFamily="sans-serif-condensed-medium"
                app:layout_constraintHorizontal_bias="0.0"/>
        <TextView
                android:text="Blood For My People"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView18"
                android:fontFamily="sans-serif-condensed-medium"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="@+id/guideline"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline4"
                android:textColor="@color/colorPrimaryDark" android:textSize="20sp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView4"/>
        <ImageView
                android:layout_width="141dp"
                android:layout_height="0dp" app:srcCompat="@drawable/ic_blood_drop_svgrepo_com"
                android:id="@+id/imageView4"
                app:layout_constraintStart_toStartOf="@+id/guideline" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toStartOf="@+id/guideline4" android:layout_marginEnd="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="29dp"
                android:layout_marginBottom="146dp" app:layout_constraintBottom_toTopOf="@+id/db_tv"
                app:layout_constraintVertical_bias="0.39"/>
        <TextView
                android:text="Not  a Memeber? Sign up here"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/signUpLink"
                android:onClick="@{(view)->viewModel.onSignUp(view)}"
                app:layout_constraintStart_toStartOf="@+id/login_button"
                app:layout_constraintEnd_toEndOf="@+id/login_button" android:layout_marginTop="64dp"
                app:layout_constraintTop_toBottomOf="@+id/login_button" android:fontFamily="sans-serif-condensed-light"
                android:textColor="#1C38A8" android:singleLine="false" android:textStyle="bold"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>