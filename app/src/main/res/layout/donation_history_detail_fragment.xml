<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:text="Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_time" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/textView_title" app:layout_constraintVertical_bias="0.936"/>
        <TextView
                android:text="July 6 2019"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_title" android:textSize="26sp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="88dp" app:layout_constraintTop_toTopOf="parent" android:textStyle="bold"/>
        <View
                android:id="@+id/divider"
                android:layout_width="395dp"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.275" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>
        <TextView
                android:text="Donater"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="44dp"
                app:layout_constraintTop_toBottomOf="@+id/divider" android:layout_marginTop="44dp"
                app:layout_constraintEnd_toStartOf="@+id/textView5" android:layout_marginEnd="8dp"
                app:layout_constraintHorizontal_bias="0.0"/>
        <TextView
                android:text="To"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="44dp" android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
        />
        <TextView
                android:text="Eyosias Samson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                app:layout_constraintTop_toBottomOf="@+id/divider" android:layout_marginTop="44dp"
                android:textStyle="bold" android:layout_marginEnd="60dp" app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
                android:text="Brass Hospital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6" app:layout_constraintStart_toEndOf="@+id/textView4"
                android:layout_marginStart="188dp" app:layout_constraintTop_toBottomOf="@+id/textView5"
                android:layout_marginTop="24dp" android:textStyle="bold"/>
        <TextView
                android:text="Operated By"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                app:layout_constraintTop_toBottomOf="@+id/textView4" android:layout_marginTop="24dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="44dp"/>
        <TextView
                android:text="Amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="44dp" app:layout_constraintTop_toBottomOf="@+id/textView7"
                android:layout_marginTop="20dp"/>
        <TextView
                android:text="Dr. Tigist Dagnachew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView9" app:layout_constraintStart_toEndOf="@+id/textView7"
                android:layout_marginStart="128dp" app:layout_constraintTop_toBottomOf="@+id/textView6"
                android:layout_marginTop="24dp" android:textStyle="bold"/>
        <TextView
                android:text="470 ml"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView10" android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/textView8"
                android:layout_marginStart="152dp"
                app:layout_constraintTop_toBottomOf="@+id/textView9" android:layout_marginTop="20dp"/>
        <ImageView
                android:layout_width="53dp"
                android:layout_height="41dp" app:srcCompat="@drawable/ic_check_circle_black_24dp"
                android:id="@+id/imageView2" android:layout_marginTop="316dp"
                app:layout_constraintTop_toBottomOf="@+id/textView_title" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>
        <TextView
                android:text="Blood is Donated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView13" android:textSize="18sp"
                android:textColor="#00B01D" android:layout_marginTop="28dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView2" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>