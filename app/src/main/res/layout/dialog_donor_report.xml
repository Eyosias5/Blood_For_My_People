<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
>
    <data>
        <variable name="fragment" type="com.teambloodformypeople.fragments.AddReportFragment"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:text="Date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:id="@+id/textView_time" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/date" app:layout_constraintVertical_bias="0.936"
                android:gravity="center_horizontal"/>
        <TextView
                android:text="July 6 2019"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/date" android:textSize="26sp" app:layout_constraintStart_toStartOf="@+id/textView_time"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="@+id/textView_time"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="88dp" app:layout_constraintTop_toTopOf="parent" android:textStyle="bold"
                android:gravity="center_horizontal"/>
        <View
                android:id="@+id/divider"
                android:layout_width="395dp"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.275" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>
        <TextView
                android:text="Donater"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:id="@+id/textView3"
                app:layout_constraintBaseline_toBaselineOf="@+id/donorName"
                app:layout_constraintEnd_toStartOf="@+id/guideline13" android:layout_marginEnd="56dp"/>
        <TextView
                android:text="To"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:id="@+id/textView4"
                app:layout_constraintBaseline_toBaselineOf="@+id/recepientName"
                app:layout_constraintStart_toStartOf="@+id/textView3"/>
        <TextView
                android:text="Eyosias Samson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:id="@+id/donorName"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/recepientName"
                app:layout_constraintTop_toBottomOf="@+id/divider"
                app:layout_constraintBottom_toTopOf="@+id/recepientName"/>
        <TextView
                android:text="Brass Hospital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:id="@+id/recepientName"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/amount" app:layout_constraintTop_toBottomOf="@+id/donorName"
                app:layout_constraintBottom_toTopOf="@+id/amount"/>
        <TextView
                android:text="Amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:textSize="16sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/amount"
                app:layout_constraintStart_toStartOf="@+id/textView4"/>


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/amount"
                android:textSize="16sp"
                android:text="3.00"
                app:layout_constraintStart_toStartOf="@+id/bloodTypeEditText"
                app:layout_constraintTop_toBottomOf="@+id/recepientName"
                app:layout_constraintBottom_toTopOf="@+id/bloodTypeEditText"/>
        <Button
                android:text="update Report"
                android:layout_width="129dp"
                android:layout_height="41dp"
                android:onClick="@{(view)->fragment.insertReport(view)}"
                android:id="@+id/AddReportBtn"
                android:background="@android:color/holo_blue_dark" android:textColor="@color/colorWhite"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="20dp"
                app:layout_constraintTop_toTopOf="@+id/guideline14" app:layout_constraintHorizontal_bias="0.372"/>
        <TextView
                android:text="Blood Type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                app:layout_constraintBaseline_toBaselineOf="@+id/bloodTypeEditText"
                app:layout_constraintStart_toStartOf="@+id/textView7"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/bloodTypeEditText"
                android:hint="Enter the blood type"
                app:layout_constraintTop_toBottomOf="@+id/amount"
                app:layout_constraintStart_toStartOf="@+id/guideline13" android:layout_marginStart="24dp"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/guideline14"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
        <Button
                android:text="Delete"
                android:layout_width="129dp"
                android:layout_height="45dp"
                android:id="@+id/delete_report_btn"
                android:onClick="@{(view)->fragment.deleteReport(view)}"
                android:background="@color/colorPrimary" android:textColor="@color/colorWhite"
                app:layout_constraintStart_toStartOf="@+id/AddReportBtn"
                app:layout_constraintEnd_toEndOf="@+id/AddReportBtn" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/AddReportBtn" app:layout_constraintHorizontal_bias="0.0"/>
        <androidx.constraintlayout.widget.Guideline
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:layout_constraintGuide_begin="180dp"
                android:id="@+id/guideline13"/>
        <androidx.constraintlayout.widget.Guideline
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:layout_constraintGuide_begin="455dp"
                android:id="@+id/guideline14"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>