<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
>
    <data>
        <variable name="userListener" type="com.teambloodformypeople.listeners.UserListener"/>
        <variable name="data" type="com.teambloodformypeople.data.models.User"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_marginVertical="10dp"
            android:layout_height="wrap_content">
        <com.google.android.material.card.MaterialCardView
                style="@style/Widget.MaterialComponents.CardView"
                android:layout_width="match_parent"
                android:elevation="6dp"

                android:id="@+id/materialCardView"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.32" app:cardCornerRadius="5dp">

            <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                               android:layout_height="90dp"
                                                               android:id="@+id/he">
                <ImageView
                        android:layout_width="67dp"
                        android:layout_height="40dp" app:srcCompat="@drawable/ic_person_dark_24dp"
                        android:id="@+id/imageView3"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp"/>
                <TextView
                        android:layout_width="209dp" android:layout_height="40dp"
                        android:text="@{data.email}"

                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textSize="25sp" android:id="@+id/recipient_name_textview"
                        app:layout_constraintTop_toTopOf="@+id/imageView3"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toEndOf="@+id/imageView3" app:layout_constraintVertical_bias="1.0"/>
                <ImageButton
                        android:text="Delete"
                        android:layout_width="46dp"
                        android:layout_height="36dp"
                        android:background=""
                        android:src="@drawable/ic_edit_black_24dp"
                        android:onClick="@{(v)->userListener.onDeleteButtonClicked(v,data)}"
                        android:id="@+id/deleteBtn"
                        app:layout_constraintTop_toTopOf="@+id/recipient_name_textview"
                        app:layout_constraintBottom_toBottomOf="@+id/recipient_name_textview"
                        android:layout_marginStart="8dp"
                        app:layout_constraintStart_toEndOf="@+id/recipient_name_textview"
                        app:layout_constraintVertical_bias="0.0"/>

                <ImageButton
                        android:text="Delete"
                        android:layout_width="41dp"
                        android:layout_height="37dp"
                        android:background=""
                        android:src="@drawable/ic_delete_black_24dp"


                        android:id="@+id/imageButton"
                        app:layout_constraintTop_toTopOf="@+id/deleteBtn"
                        app:layout_constraintBottom_toBottomOf="@+id/deleteBtn"
                        android:layout_marginStart="12dp" app:layout_constraintStart_toEndOf="@+id/deleteBtn"
                        app:layout_constraintVertical_bias="0.0"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>