<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
<variable name="data" type="com.teambloodformypeople.data.models.Donor"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_marginVertical="10dp"
            android:layout_height="wrap_content">
        <com.google.android.material.card.MaterialCardView
                style="@style/Widget.MaterialComponents.CardView"
                android:layout_width="match_parent" android:id="@+id/materialCardView"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.32" app:cardCornerRadius="5dp">

            <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="707dp"
                                                               android:layout_height="128dp">
                <TextView
                        android:layout_marginTop="44dp"
                        android:layout_width="368dp" android:layout_height="35dp"
                        android:text="@{data.fullName}"

                        app:layout_constraintTop_toTopOf="parent"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textSize="25sp" android:id="@+id/recipient_name_textview"
                        app:layout_constraintStart_toEndOf="@+id/imageView3"
                        app:layout_constraintBottom_toTopOf="@+id/donation_recpient_location_textview"
                />
                <TextView
                        android:text="@{data.dateOfBirth}"

                        android:layout_width="150dp"
                        android:layout_height="25dp"
                        android:id="@+id/donation_recpient_location_textview"
                        android:textSize="18sp"
                        android:textStyle="italic" style="@android:style/Widget.Holo.Light.TextView"
                        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
                        app:layout_constraintEnd_toEndOf="@+id/recipient_name_textview"/>
                <ImageView
                        android:layout_width="41dp"
                        android:layout_height="35dp" app:srcCompat="@drawable/ic_person_dark_24dp"
                        android:id="@+id/imageView3" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.519"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>